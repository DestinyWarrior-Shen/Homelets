<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">

    <ProgressBar
        android:id="@+id/load_data_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="10dip"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center">

                <View
                    android:id="@+id/dot_0"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal" />

                <View
                    android:id="@+id/dot_1"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal" />

                <View
                    android:id="@+id/dot_2"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal" />

                <View
                    android:id="@+id/dot_3"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/food_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="?attr/colorPrimary"
                    android:clickable="true"
                    android:text="Find Food"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/toilet_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="1dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:text="Find Toilet"
                    android:textColor="@color/white"
                    android:background="?attr/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/rf_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="?attr/colorPrimary"
                    android:clickable="true"
                    android:text="Recommend Food"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/service_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="1dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:text="Other Services"
                    android:textColor="@color/white"
                    android:background="?attr/colorPrimary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>